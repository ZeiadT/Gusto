<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSurface" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/colorPrimary" />
            <padding android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="16dp" />
        </shape>
    </item>

    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorErrorContainer" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/colorError" />
            <padding android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="16dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSurface" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/green_500_faded" />
            <padding android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="16dp" />
        </shape>
    </item>
</selector>