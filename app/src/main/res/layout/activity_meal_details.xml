<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".presentation.mealdetails.MealDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="320dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineImageBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="320dp" />

        <CheckBox
            android:id="@+id/btnFavorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_circle"
            android:button="@drawable/bookmark"
            android:elevation="4dp"
            android:padding="8dp"
            app:buttonTint="@color/colorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_overlay_back"
            android:elevation="4dp"
            android:padding="8dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorOnSurface" />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-24dp"
            app:cardBackgroundColor="@color/colorBackground"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <TextView
                    android:id="@+id/titleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ful Medamis"
                    android:textSize="18sp"
                    app:fontFamily="@font/montserrat_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/category_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Category"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:chipBackgroundColor="@color/green_500_10"
                    app:chipCornerRadius="16dp"
                    app:chipEndPadding="8dp"
                    app:chipIcon="@drawable/ic_leaf"
                    app:chipIconSize="20dp"
                    app:chipIconTint="@color/colorPrimary"
                    app:chipIconVisible="true"
                    app:chipStartPadding="8dp"
                    app:chipStrokeColor="@color/green_500_20"
                    app:chipStrokeWidth="2dp"
                    app:fontFamily="@font/montserrat_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleTV" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/country_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Country"
                    android:textColor="@color/colorSecondary"
                    android:textSize="14sp"
                    app:chipBackgroundColor="@color/orange_500_10"
                    app:chipCornerRadius="16dp"
                    app:chipEndPadding="8dp"
                    app:chipIcon="@drawable/ic_world"
                    app:chipIconSize="20dp"
                    app:chipIconTint="@color/colorSecondary"
                    app:chipIconVisible="true"
                    app:chipStartPadding="8dp"
                    app:chipStrokeColor="@color/orange_500_20"
                    app:chipStrokeWidth="2dp"
                    app:fontFamily="@font/montserrat_bold"
                    app:layout_constraintBottom_toBottomOf="@+id/category_tag"
                    app:layout_constraintStart_toEndOf="@+id/category_tag"
                    app:layout_constraintTop_toTopOf="@+id/category_tag" />

                <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                    android:id="@+id/youtube_player_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/category_tag" />

                <TextView
                    android:id="@+id/ingredient_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/ingredients"
                    android:textColor="@color/colorOnBackground"
                    android:textSize="16sp"
                    app:fontFamily="@font/montserrat_semibold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/youtube_player_view" />

                <TextView
                    android:id="@+id/ingredient_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ingredient_text"
                    android:text="8 items"
                    android:textColor="@color/colorTextMuted"
                    android:textSize="14sp"
                    app:fontFamily="@font/montserrat_semibold"
                    app:layout_constraintBottom_toBottomOf="@+id/ingredient_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ingredient_title" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ingredient_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@+id/ingredient_title"
                    tools:itemCount="4" />

                <TextView
                    android:id="@+id/instructions_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/instructions"
                    android:textColor="@color/colorOnBackground"
                    android:textSize="16sp"
                    app:fontFamily="@font/montserrat_semibold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ingredient_recyclerview" />

                <TextView
                    android:id="@+id/instructions_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Meal Instructions List..."
                    android:textColor="@color/colorOnBackground"
                    android:textSize="14sp"
                    app:fontFamily="@font/montserrat_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/instructions_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>