<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Gusto" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/montserrat</item>

        <item name="colorPrimary">@color/green_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/green_50</item>
        <item name="colorOnPrimaryContainer">@color/green_700</item>

        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/orange_500</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <item name="android:colorBackground">@color/grey_50</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/grey_900</item>
        <item name="colorOnSurfaceVariant">@color/grey_700</item>
        <item name="colorOutline">@color/grey_700</item>

        <item name="android:statusBarColor">@color/grey_50</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorErrorContainer">@color/colorErrorContainer</item>
        <item name="colorOnErrorContainer">@color/colorOnErrorContainer</item>
    </style>

    <style name="Theme.Gusto" parent="Base.Theme.Gusto" >
        <item name="cursorColor">@color/colorPrimary</item>
        <item name="cursorErrorColor">@color/colorError</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <!-- Bottom Sheet Style -->
    <style name="Widget.Gusto.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Gusto.BottomSheet</item>
        <item name="behavior_peekHeight">auto</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_draggable">true</item>
    </style>

    <!-- Bottom Sheet Shape -->
    <style name="ShapeAppearance.Gusto.BottomSheet" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Date Picker Theme (for Material Date Picker) -->
    <style name="ThemeOverlay.Gusto.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Gusto.DatePicker</item>
    </style>

    <style name="ShapeAppearance.Gusto.DatePicker" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>